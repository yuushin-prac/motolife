<% if user_signed_in? %>
  <% if current_user.likes.find_by(article_id: @article.id) %>
    <%= link_to article_likes_path(@article.id), data: { "turbo-method": :delete }, remote: true do %>
      <i class="fas fa-thumbs-up"></i>
      <%= @article.likes.count %>
    <% end %>
  <% else %>
    <%= link_to article_likes_path(@article.id), data: { "turbo-method": :post }, remote: true do %>
      <i class="fas fa-thumbs-up"></i>
      <%= @article.likes.count %>
    <% end %>
  <% end %>
<% else%>
  <%= link_to new_user_session_path do %>
    <i class="fas fa-thumbs-up"></i>
    <%= @article.likes.count %>
  <% end %>
<% end %>